<%- include('partials/header') -%>
	<body>

        <h1 class="ms-3"><%=items.itemName%></h1>
        
        <div class="d-flex border border-dark ms-3" style="width: 500px; height: 300px;">
        <img class="object-fit-contain" style="width: 100%; height: 100%;" src="<%=items.image %>" alt="current listing image">
        </div>

        <p class="ms-3"><%=items.itemDesc %></p>

        <h3 class="ms-3"><span>Price:</span><%=items.itemPrice %></h3>

        <h3 class="ms-3"><%=items.itemSoldQty %> items sold</h3>

        <h3 class="ms-3"><span>Items in stock:</span><%=items.itemStock %></h3>

        <h4 class="ms-3">Items listed by <a href="/marketMain/profile/<%=items.user%>"><%=user.userName %></a></h4>
        
        <section class="mt-3 ms-3 d-flex justify-content-around" style="width: 500px;">
        <% if (items.user!=currUser.id) { %>
            <% if (cartItems.equals(items._id)) { %>
                <h2>You have added this item into your cart!</h2>
            <% }else{ %>
        <form action="/marketMainCart/addtoCart/<%=items._id%>" method="POST"><button>Add to Cart</button></form>
        <% } %>
        <% } %>
        <% if (items.user==currUser.id) { %>
        <form action="/marketMain/deleteListing/<%=items._id%>?_method=DELETE" method="POST">
            <button>Delete listing</button>
        </form>
        <% } %>
        </section>

	</body>
</html>
<%- include('partials/footer') -%>